<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_bubble_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Profile Icon on the Left (for received messages) -->
    <ImageView
        android:id="@+id/profile_icon_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />

    <!-- Chat Bubble Container with a minWidth so it can at least display the timestamp -->
    <LinearLayout
        android:id="@+id/bubble_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_chat_bubble"
        android:minWidth="120dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Message Text -->
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message goes here"
            android:textColor="@color/myBlack"
            android:textSize="16sp" />

        <!-- Buttons Row: Copy Email and Copy Phone Number -->
        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/copy_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/myPrimary"
                android:text="Copy Email"
                android:textColor="@color/myWhite" />

            <Button
                android:id="@+id/copy_phone_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/myPrimary"
                android:text="Copy Phone Number"
                android:textColor="@color/myWhite" />
        </LinearLayout>

        <!-- Status Row: Date/Time and Read Receipt Icon -->
        <LinearLayout
            android:id="@+id/status_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:textColor="@color/mySecondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/read_receipt_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:contentDescription="Read Receipt"
                android:src="@drawable/ic_placeholder" />
        </LinearLayout>
    </LinearLayout>

    <!-- Profile Icon on the Right (for sent messages) -->
    <ImageView
        android:id="@+id/profile_icon_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />
</LinearLayout>
