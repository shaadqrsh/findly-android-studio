<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/myWhite"
    tools:context=".Activities.ProfileActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/fragment_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_bar"
        android:layout_below="@id/top_bar"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- Change Profile Picture -->
        <Button
            android:id="@+id/changeProfilePicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/myPrimary"
            android:text="Change Profile Picture"
            android:textColor="@color/myWhite" />

        <!-- Username (Not Editable) -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Username"
            android:textColor="@color/myPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Name"
            android:textColor="@color/myBlack"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_textview"
            android:hint="Enter Name"
            android:padding="8dp"
            android:textColor="@color/myBlack"
            android:textColorHint="@color/myGray"
            android:visibility="gone" />

        <!-- Email -->

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Email"
            android:textColor="@color/myBlack"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_textview"
            android:hint="Enter Email"
            android:padding="8dp"
            android:textColor="@color/myBlack"
            android:textColorHint="@color/myGray"
            android:visibility="gone" />

        <!-- Phone -->
        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Phone"
            android:textColor="@color/myBlack"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_textview"
            android:hint="Enter Phone"
            android:padding="8dp"
            android:textColor="@color/myBlack"
            android:textColorHint="@color/myGray"
            android:visibility="gone" />

        <!-- Edit/Submit Button -->

        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/myPrimary"
            android:text="Edit"
            android:textColor="@color/myWhite" />

    </LinearLayout>

    <!-- Bottom Bar -->
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/fragment_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loading"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
