<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myPrimary"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Lost Button -->
        <LinearLayout
            android:id="@+id/button_lost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/icon_lost"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lost"
                app:tint="@color/myWhite" />

            <TextView
                android:id="@+id/text_lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lost"
                android:textColor="@color/myWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Found Button -->
        <LinearLayout
            android:id="@+id/button_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_found"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_found"
                app:tint="@color/myWhite" />

            <TextView
                android:id="@+id/text_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Found"
                android:textColor="@color/myWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Mine Button -->
        <LinearLayout
            android:id="@+id/button_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_mine"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mine"
                app:tint="@color/myWhite" />

            <TextView
                android:id="@+id/text_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mine"
                android:textColor="@color/myWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/myWhite" />

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/myWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Messages Button -->
        <LinearLayout
            android:id="@+id/button_messages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_messages"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_messages"
                app:tint="@color/myWhite" />

            <TextView
                android:id="@+id/text_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Messages"
                android:textColor="@color/myWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
